<!-- Show Specific Blog Page -->
<!-- Requested upon /blogs/:id -->

<%- include("partials/header") %>

<div class="ui main text container segment center aligned">
	<div class="ui huge header centered"><%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img src="<%= blog.image %>" class="ui centered rounded image">
			<div class="content">
				<span id="date"><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p id="bBody"><%- blog.body%></p>
			</div>
			<a class="ui inverted orange button " href="/blogs/<%= blog._id %>/edit">Edit</a>
			<form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE" id="delete">
				<button class="ui inverted red button">Delete</button>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer") %>